@model Entidades.Modelos.Turma

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Turma</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroDeVagas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroDeVagas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Disciplina)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Disciplina.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Semestre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Semestre.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Horarios)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Horários</th>
                </tr>
                @foreach (var item in Model.Horarios)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Horario)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
