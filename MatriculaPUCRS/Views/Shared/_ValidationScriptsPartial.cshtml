<script type="text/javascript">
	function TituloSemestre( value )
	{
        var ano = value.substring(0,4);
        var mes = value.substring(5,7);
        var semestre = (mes <= 6) ? "1" : "2";
        var titulo = ano + '/' + semestre;
        document.getElementById( "Titulo" ).value = titulo;
	}
</script>